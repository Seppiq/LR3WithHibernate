<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/Aston</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="show_sql">true</property>
        <mapping class="com.example.lr3.model.TeacherHibernate"/>
        <mapping class="com.example.lr3.model.Student"/>
        <mapping class="com.example.lr3.model.StudentAssignment"/>
    </session-factory>
</hibernate-configuration>